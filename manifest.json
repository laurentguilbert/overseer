{
  "name": "Overseer",
  "version": "2.0",
  "manifest_version": 2,
  "description": "Oversee any number of pages from a single tile interface.",
  "author": "Laurent Guilbert",

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_title": "Overseer",
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    }
  },

  "background": {
    "scripts": ["js/background.js"]
  },

  "options_page": "html/options.html",
  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true
  },

  "permissions": [
    "storage"
  ]
}
